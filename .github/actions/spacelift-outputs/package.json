{
  "name": "action-spacelift-output",
  "version": "1.0.0",
  "description": "A GitHub action to get the output of a Spacelift stack deployment for Cloud Run",
  "main": "index.js",
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "prettier --write **/*.js",
    "format:check": "prettier --check **/*.js",
    "lint": "npx eslint .. -c .eslintrc.yml",
    "package": "ncc build src/index.js --license licenses.txt"
  },
  "eslintConfig": {
    "extends": ".eslintrc.yml"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "author": "Jens Skott <jens.skott@thoughtgears.co.uk>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/preset-env": "^7.23.9",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^5.0.1",
    "prettier": "^3.2.5"
  }
}
